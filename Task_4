package task_4;
  import java.util.*;
/**
 *
 * @author Hayredin Tahir
 */
public class Task_4 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
         Scanner h=new Scanner(System.in);
        String Reverse="";
        System.out.println("Please A Character To Be Reversed?");
       String orign=h.nextLine();
       int length=orign.length();
      for(int i=length-1;i>=0;i--){
         Reverse=Reverse+orign.charAt(i);
      }
         System.out.println("The Reverse Of The Entered Character Is\t"+ Reverse); 
    }
    
}
